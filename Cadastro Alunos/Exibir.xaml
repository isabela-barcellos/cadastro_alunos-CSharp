<Window x:Class="Cadastro_Alunos.Exibir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cadastro_Alunos"
        mc:Ignorable="d"
        Title="Alunos Cadastrados" Height="400" Width="600">
    <Grid Margin="10">
        <DataGrid x:Name="dataGrid" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Matrícula" Binding="{Binding Matricula}" Width="100"/>
                <DataGridTextColumn Header="Nota 1" Binding="{Binding Nota1}" Width="80"/>
                <DataGridTextColumn Header="Nota 2" Binding="{Binding Nota2}" Width="80"/>
                <DataGridTextColumn Header="Média" Binding="{Binding Media}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
